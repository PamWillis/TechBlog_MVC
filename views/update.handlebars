
<div class="col-md-6 card">
  <h3>Update Blog:</h3>
  <form class="form update-blog-form" action="/api/blogs" method="PUT">
    <input type="hidden" name="blogID" value="{{id}}"/>
    <div class="form-group">
      <label for="blog-heading">Heading:</label>
      <input class="form-input" type="text" value="{{blog.heading}}" id="blog-heading" name="heading" />
    </div>
    <div>
      <div>{{user.name}} {{format_date createdAt}}</div>
    </div>
    <div class="form-group">
      <label for="blog-content">Content:</label>
      <input class="form-input" type="text" value="{{blog.content}}" id="blog-content" name="content" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Update Blog</button>
    </div>
  </form>
</div>
<script src="/js/update.js"></script>



