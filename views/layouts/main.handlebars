<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{{title}}}</title>

 
  <link rel="stylesheet" href="/css/jass.css">
   <link rel="stylesheet" href="/css/style.css">

</head>

<body>

  <header class="banner">
    <a href="/">
      <h1>The Tech Blog</h1>
    </a>
      <!-- Conditionally render login or logout links -->
      {{#if logged_in}}

      <a href="/">
        <button class="no-button" id="home">HOME</button>
      </a>
      <a href="/blog">
        <button class="no-button" id="blog">DASHBOARD</button>
      </a>
      <button class="no-button" id="logout">LOGOUT</button>

      {{else}}
      {{!-- //if not logged in --> --}}
      <a href="/">
        <button class="no-button" id="home">HOME</button>
      </a>

      <a href="/login">
        <button class="no-button" id="blog">DASHBOARD</button>
      </a>
      <a href="/login">
        <button class="no-button" id="login">LOGIN</button>
      </a>
      {{/if}}


  </header>
  <main class="container container-fluid mt-5 body">
    <!-- Render the sub layout -->
    {{{ body }}}
  </main>
  <footer>

  </footer>
  </div> <!-- This closing tag was added -->

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

</body>

</html>