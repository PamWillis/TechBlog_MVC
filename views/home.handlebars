

<h1>Welcome to my blog page</h1>
<h3>Please log in contribute and view or edit your own blogs</h3>

<div>
    <h3>List of Blogs</h3>
        {{#each blogs}}
         <div class="home-card">
        <h2>{{heading}}</h2>
        <div>
        <h3>By: {{user.name}}</h3>
        <p>{{format_date createdAt}}</p>
        </div>
        <h3>Content</h3>
        <p>{{content}}</p>
        {{each comments}}
        <p>{{remark}}</p>
        {{\comments}}
    </div>
    {{/each}}
</div>

<script src="/js/blog.js"></script>
<script src="/js/comments.js"></script>
