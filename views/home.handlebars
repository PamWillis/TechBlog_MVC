{{!-- if logged in can add a comment (shows comment button) if not welcome page with titles --}}
<div>
    {{#if logged_in}}
    {{#if blogs.length}}
    <div class="col-md-6 blog-list home-card">
        <h3>All Current Blogs:</h3>
        <p>Click on a title to read the full blog and view other comments.</p>
        <p>Feel free to add your own comment with the comment button.</p>
        <div><br></div>
        {{#each blogs as |blog|}}
        <div class="row mb-2 center-card">
            <div class="col-md-6">
                <h3><a href="/blog/{{blog.id}}">{{blog.heading}}</a></h3>
                <p>{{format_date createdAt}}</p>
            </div>
            <div class="col-md-6">
                <button class="btn btn-sm btn-primary" id="new-comments-form"><a
                        href="/comments/{{blog.id}}">COMMENTS</a></button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{else}}
    <h1>Welcome to my blog page</h1>
    <h3>Please log in contribute and view or edit your own blogs</h3>
    <h3>List of Blogs</h3>
    {{#each blogs}}
    <div class="home-card">
        <h2>{{heading}}</h2>
        <div>
            <h3>By: {{user.name}}</h3>
            <p>{{format_date createdAt}}</p>
        </div>
        <h3>Content</h3>
        <p>{{content}}</p>
        {{#each comments}}
        <p>{{remark}}</p>
        {{/each}}
    </div>
    {{/each}}
</div>
{{/if}}

<script src="/js/home.js"></script>