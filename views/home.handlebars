{{!-- if logged in can add a comment (shows comment button) if not welcome page with titles --}}
<div>
    {{#if logged_in}}
    {{#if blogs.length}}
    <div class="col-md-6 blog-list center-card">
        <h1>All Current Blogs:</h1>
        <p>Click on a title to read the full blog and view other comments.</p>
        <p>Feel free to add your own comment with the comment button.</p>
        <div><br></div>
        {{#each blogs as |blog|}}
        <div class="row mb-2 center-card">
            <div class="col-md-6">
                <div class="heading"><a href="/blog/{{blog.id}}">{{blog.heading}}</a></div>
                <p>{{format_date createdAt}}</p>
            </div>
            <div class="col-md-6">
                <button class="btn btn-sm btn-primary" id="new-comments-form"><a
                        href="/comments/{{blog.id}}">COMMENTS</a></button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}

    {{else}}
    <div class="center" <h1>Welcome to my blog page</h1>
        <h3>Please log in view, contribute your own blog or comment on others</h3>
        <h2>List of Blogs</h2>
    </div>
    {{#each blogs}}
    <div class="center-card">
        <h2>{{heading}}</h2>
        <h3>By: {{user.name}} {{format_date createdAt}}</h3>
        <h3>Content:</h3>
        <p>{{content}}</p>
        {{#each comments}}
        <p>{{remark}}</p>
        {{/each}}
    </div>
    {{/each}}
</div>
{{/if}}

<script src="/js/home.js"></script>