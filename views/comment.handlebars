<h1>Enjoy reading and feel free to leave a comment</h1>


<div>
    <h3>List of Blogs</h3>
    {{#each blogs}}
    <div class="home-card">
        <h2>{{heading}}</h2>
        <div>
            <h3>By: {{user.name}}</h3>
            <p>{{format_date createdAt}}</p>
        </div>
        <h3>Content</h3>
        <p>{{content}}</p>
    </div>
    {{/each}}
</div>
<form class="form new-comment-form" action="/api/comments" method="POST">
    <div class="form-group">
        <label form="comment-remark">comment:</label>
        <input class="form-input" type="text" id="comment-remark" name="remark" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit Blog</button>
    </div>


    <script src="/js/blog.js"></script>
    <script src="/js/comments.js"></script>